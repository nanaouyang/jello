<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.api.jello.dao.UserRoleDao">
    <select id="getRoles" parameterType="string" resultType="com.api.jello.entity.Role">
        SELECT
            T_ROLE.ROLE_VALUE
        FROM
            T_USER_ROLE
                LEFT JOIN T_ROLE ON T_USER_ROLE.ROLE_ID = T_ROLE.id
        WHERE
            USER_ID = #{userId}
    </select>

</mapper>